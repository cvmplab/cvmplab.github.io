<div class="open_positions">
  {% if site.open_positions != blank %}
    {% assign news_size = site.open_positions | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign news = site.open_positions | reverse %}
        {% if include.limit and page.announcements.limit %}
          {% assign news_limit = page.announcements.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}
        {% for item in news limit: news_limit %}
          <tr>
            <td style="vertical-align: middle;">
              {% if item.inline %}
                {{ item.title | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
            <th scope="row" style="width: 20%; vertical-align: middle; text-align: center;">
              {% assign collapse_id = "open-position-" | append: item.slug | slugify %}
              <button
                class="btn btn-primary"
                type="button"
                data-toggle="collapse"
                data-target="#{{ collapse_id }}"
                aria-expanded="false"
                aria-controls="{{ collapse_id }}"
                style="background-color: var(--global-theme-color);"
              >
                More details
              </button>
            </th>
          </tr>

          <tr>
            <td colspan="2" class="p-0">
              <div id="{{ collapse_id }}" class="collapse">
                <div class="card card-body">
                  {{ item.content }}
                  {% if item.correspondence_email %}
                    <div class="mt-3">
                      <a href="mailto:{{ item.correspondence_email | encode_email }}" class="btn btn-outline-primary btn-sm">
                        Email
                      </a>
                    </div>
                  {% endif %}
                </div>
              </div>
            </td>
          </tr>

        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No open positions currently</p>
  {% endif %}
</div>
